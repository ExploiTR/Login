<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:screenOrientation="portrait"
    android:background="#EEEEEE"
    tools:context="app.exploitr.fast.login.MainActivity">

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:background="@drawable/buttonback"
        android:minHeight="50dp"
        android:minWidth="100dp"
        android:text="@string/Stocko_mod"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login"
        android:layout_alignEnd="@+id/login"
        android:layout_alignRight="@+id/login"
        android:layout_marginBottom="140dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:text="@string/Nstatus"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textSize="36sp" />

    <ImageView
        tools:ignore="ContentDescription"
        android:id="@+id/isconnectedorx"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/login"
        android:layout_marginBottom="120dp"
        android:layout_marginEnd= "10dp"
        android:layout_marginRight= "10dp"
        android:layout_toEndOf="@+id/status"
        android:layout_toRightOf="@+id/status"
        android:src="@drawable/isconnectedx"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"/>

    <ProgressBar
        android:id="@+id/checkin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/isconnectedorx"
        android:layout_alignRight="@+id/isconnectedorx"
        android:layout_alignTop="@+id/login"
        android:layout_alignBottom="@+id/login"
        android:visibility="invisible"/>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/meat_exel">
    </com.google.android.gms.ads.AdView>


</RelativeLayout>