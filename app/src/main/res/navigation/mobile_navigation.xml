    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_stat"
        android:name="app.exploitr.login.platinum.ui.fragments.stat.StatFragment"
        android:label="@string/title_stat"
        tools:layout="@layout/fragment_stat" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="app.exploitr.login.platinum.ui.fragments.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="app.exploitr.login.platinum.ui.fragments.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
